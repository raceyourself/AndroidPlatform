<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.raceyourself.raceyourself">

    <application
        android:name=".MobileApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustPan|stateHidden" >
        </activity>
        <activity
            android:name=".home.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".login.LoginSignupPrompt"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:label="@string/title_activity_login_signup_prompt">
        </activity>
	<activity
	    android:name=".matchmaking.MatchmakingDistanceActivity"
            android:label="@string/title_activity_matchmaking_distance" >
	</activity>
	<activity
	    android:name=".matchmaking.MatchmakingFindingActivity"
            android:label="@string/title_activity_matchmaking_finding" >
	</activity>
	<activity
            android:name=".matchmaking.ChooseFitnessActivity"
            android:label="@string/title_activity_choose_fitness" >
    </activity>
    <activity
        android:name=".game.GameActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:label="@string/title_activity_game"
        android:theme="@style/FullscreenTheme" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name=".base.FullscreenActivity"
        android:configChanges="orientation|keyboardHidden|screenSize"
        android:label="@string/title_activity_fullscreen"
        android:theme="@style/FullscreenTheme" >
    </activity>

    <service
        android:name=".game.GameService"
        android:enabled="true"
        android:exported="true" >
    </service>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
