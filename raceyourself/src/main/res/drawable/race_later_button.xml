<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#ffbb1500"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff6b6b6b"
                />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <solid
                android:color="#ff8a8a8a"
                />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#b5b5b5"
                />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>