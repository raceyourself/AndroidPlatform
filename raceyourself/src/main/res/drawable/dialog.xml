<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- shadow -->
    <item android:bottom="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <gradient
                android:type="radial"
                android:startColor="#2000"
                android:endColor="#2fff"
                android:gradientRadius="2000" />
        </shape>
    </item>

    <!-- card: bottom/right is margin left for drop-shadow-->
    <item android:bottom="10dp" android:right="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="#eeeeee" />
            <stroke android:color="#000000" android:width="0dp"/>
        </shape>
    </item>
</layer-list>
