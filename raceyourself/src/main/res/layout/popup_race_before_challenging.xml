<!--
Used for matchmaking and for setting challenges for opponents.
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raceyourself.raceyourself.matchmaking.MatchmakingDurationActivity"
    android:background="#a0000000"
    android:gravity="center">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="311dp"
        android:layout_height="320dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView"
            android:background="@drawable/race_before_challenging_bg"
            android:contentDescription="@string/white_box_image_desc" />

        <RelativeLayout
            android:padding="15dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/customizeHeaderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/popup_race_before_challenging_heading"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/runText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/popup_race_before_challenging_run"
                android:textColor="@android:color/black"
                android:textSize="50sp"
                android:layout_below="@id/customizeHeaderText"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/explanationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/popup_race_before_challenging_explanation"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_below="@id/runText"
                android:layout_marginTop="10dp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:text="ok, got it"
                android:textColor="@android:color/white"
                android:id="@+id/okButton"
                android:background="@drawable/red_accept_button"
                android:layout_below="@id/explanationText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="24dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
