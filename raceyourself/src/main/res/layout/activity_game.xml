<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameActivityVerticalLayout"
    android:weightSum="1"
    android:background="#ffffff">

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/gameMusicButton"
        android:src="@drawable/icon_music_black"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/gameMessage"
        android:layout_below="@+id/gameMusicButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gameStatsPager"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/gameMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/gameLockBar">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/gameRaceYourselfWords"
            android:src="@drawable/raceyourself_words_green_black"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:gravity="left"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:focusableInTouchMode="false" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/gameLockButton"
            android:src="@drawable/icon_locked_black"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:gravity="left"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:visibility="visible"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/gamePauseButton"
            android:src="@drawable/icon_pause_black"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:visibility="gone"
            android:layout_marginTop="5dp" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/gameQuitButton"
            android:src="@drawable/icon_quit_black"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:name="com.raceyourself.raceyourself.game.GameStickMenFragment"
        android:id="@+id/gameStickMenFragment"
        android:layout_above="@+id/gameLockBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_game_stick_men" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gameOverlayGps"
        android:background="#aaffffff"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/gameOverlayGpsImage1"
                android:src="@drawable/icon_pause_green"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:background="#ff0000" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/gameOverlayGpsImage2"
                android:src="@drawable/icon_pause_green"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/gameOverlayGpsImage3"
                android:src="@drawable/icon_pause_green"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/gameOverlayGpsImage4"
                android:src="@drawable/icon_pause_green"
                android:scaleType="fitXY"
                android:adjustViewBounds="true" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WAITING FOR GPS"
            android:id="@+id/gameOverlayGpsLabel"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue with low accuracy"
            android:id="@+id/gameOverlayGpsContinueButton"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gameOverlayPause"
        android:background="#55000000"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/gameOverlayPausePauseImage"
            android:src="@drawable/icon_pause_green"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RACE PAUSED"
            android:id="@+id/gameOverlayPausePauseLabel"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/gameOverlayPauseContinueButton"
            android:src="@drawable/icon_play_black"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:background="#00000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:id="@+id/gameOverlayPauseContinueLabel"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/gameOverlayPauseQuitButton"
            android:src="@drawable/icon_quit_black"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:background="#00000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIT"
            android:id="@+id/gameOverlayPauseQuitLabel"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/gameOverlayQuit"
        android:background="#55000000"
        android:gravity="center_vertical|center_horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THERE IS NO QUITTING"
            android:id="@+id/gameOverlayQuitQuittingLabel"
            android:textColor="#000000" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/gameOverlayQuitContinueButton"
            android:src="@drawable/icon_play_black"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:background="#00000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:id="@+id/gameOverlayQuitContinueLabel"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONLY JOKING, TO QUIT\nTAP THE BUTTON BELOW"
            android:id="@+id/gameOverlayQuitJokingLabel"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:textColor="#000000" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/gameOverlayQuitQuitButton"
            android:src="@drawable/icon_quit_black"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="20dp"
            android:background="#00000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QUIT"
            android:id="@+id/gameOverlayQuitQuitLabel"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

    </LinearLayout>


</RelativeLayout>