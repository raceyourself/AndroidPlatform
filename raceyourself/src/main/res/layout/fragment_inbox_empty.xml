<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/emptyInboxImage"
        android:src="@drawable/empty_inbox"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your inbox is empty right now.\nNew challenges will appear here."
        android:id="@+id/emptyInboxText"
        android:textSize="14sp"
        android:layout_below="@+id/emptyInboxImage"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:paddingBottom="20dp"
        android:textColor="#a29f94"
        android:textStyle="bold" />

</RelativeLayout>