<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlay_home_glass"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog"
    android:padding="10dp"
    android:gravity="center_vertical|center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="If you connect a Google Glass, RaceYourself will use it to show your in-game progress and stats."
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overlay_home_glass_icon"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_glass"
        android:background="#ffaaaa"
        android:layout_margin="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Pair your Glass via bluetooth and launch the RaceYourself Glass app."
        android:textSize="20sp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Test Connection"
        android:id="@+id/overlay_home_glass_button"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Connecting..."
        android:textSize="20sp"
        android:id="@+id/overlay_home_glass_label_connecting"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Connected!"
        android:textSize="20sp"
        android:id="@+id/overlay_home_glass_label_connected"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>

</LinearLayout>