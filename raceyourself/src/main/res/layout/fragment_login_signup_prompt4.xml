<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raceyourself.raceyourself.login.LoginSignupPromptActivity$PlaceholderFragment"
    android:background="#ffffff">


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/signup_fragment_4_title"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/signup_fragment_4_desc"
        android:id="@+id/textView6"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="272dp"
        android:id="@+id/imageView"
        android:src="@drawable/onboarding_screen4"
        android:adjustViewBounds="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="30dp"
        android:paddingTop="40dp"
        android:paddingRight="30dp" />


</RelativeLayout>
