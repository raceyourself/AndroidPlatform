<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.raceyourself.raceyourself.home.HomeActivity">

    <Button
        android:id="@+id/race_now_quickmatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_race_now"
        android:layout_gravity="center_horizontal" />

    <android.support.v4.view.ViewPager
        android:id="@+id/home_pager"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent" />

    <com.facebook.widget.LoginButton
        android:id="@+id/facebook_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/invite_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_email_invite"
        android:layout_gravity="center_horizontal" />

</LinearLayout>