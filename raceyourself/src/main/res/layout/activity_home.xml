<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


	<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.raceyourself.raceyourself.home.HomeActivity">

    <Button
        android:id="@+id/race_now_quickmatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Race now"/>

    <LinearLayout
        android:id="@+id/facebook_login_holder"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v4.view.ViewPager
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/home_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.raceyourself.raceyourself.home.HomeActivity" />

    </LinearLayout>

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/challengeFragment"
        android:visibility="gone"
        >
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.raceyourself.raceyourself.home.ChallengeExpandedFragment"
            android:id="@+id/fragment"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            tools:layout="@layout/fragment_challenge_expanded"/>
        </RelativeLayout>

</RelativeLayout>

