<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.raceyourself.raceyourself.home.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_pager"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent" />

    <com.facebook.widget.LoginButton
        android:id="@+id/facebook_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/invite_email_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_email_invite"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:onClick="showInviteEditText" />

</LinearLayout>
</RelativeLayout>