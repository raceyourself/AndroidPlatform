<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp">

    <RelativeLayout
        android:id="@+id/gameStickMenLayout"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <ImageView
            android:id="@+id/gameBuildings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/background_buildings"
            android:background="#00ffffff"/>

        <ImageView
            android:id="@+id/opponentStickMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_racer_opponent" />

        <ImageView
            android:id="@+id/playerPointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/playerStickMan"
            android:paddingLeft="15dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/icon_pointer" />

        <ImageView
            android:id="@+id/playerStickMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/icon_racer_you" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/gameProgressbar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameStickMenLayout"
        android:layout_marginTop="10dp"
        android:progress="30"
        android:progressDrawable="@drawable/game_progressbar_red" />

    <ProgressBar
        android:id="@+id/gameProgressbar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameProgressbar1"
        android:layout_marginTop="10dp"
        android:progress="50"
        android:progressDrawable="@drawable/game_progressbar_blue" />

</RelativeLayout>