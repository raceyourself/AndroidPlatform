<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#ffffff">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".home.ChallengeExpandedFragment"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHALLENGE COMPLETE"
            android:textSize="16sp"
            android:textColor="#a29e93"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/vsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <ImageView
                android:id="@+id/vsImageLeft"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginLeft="1dp"
                android:src="@drawable/vs_header_left"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/vsImageMiddle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vs_header_middle"
                android:layout_weight="0"/>
            <ImageView
                android:id="@+id/vsImageRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:src="@drawable/vs_header_right"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/playerProfilePic"
            android:background="@drawable/circle_outline"
            android:src="@drawable/default_profile_pic"
            android:layout_alignBottom="@+id/vsRow"
            android:layout_alignLeft="@+id/vsRow"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="53dp"
            android:contentDescription="@string/player_picture_image_desc"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/opponentProfilePic"
            android:background="@drawable/circle_outline"
            android:src="@drawable/default_profile_pic"
            android:layout_alignBottom="@+id/vsRow"
            android:layout_alignRight="@+id/vsRow"
            android:layout_marginBottom="35dp"
            android:layout_marginRight="53dp"
            android:contentDescription="@string/opponent_picture_image_desc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_default_name"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/playerName"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/vsRow"
            android:layout_alignBottom="@+id/vsRow"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="67dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/opponent_default_name"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/opponentName"
            android:gravity="center_horizontal"
            android:layout_alignRight="@+id/vsRow"
            android:layout_alignBottom="@+id/vsRow"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="28dp"/>


        <!-- speech bubble -->
        <ImageView
            android:id="@+id/speechBubble"
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginTop="-15dp"
            android:layout_below="@+id/vsRow"
            android:layout_centerHorizontal="true"
            android:src="@drawable/frame_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/speechBubble"
            android:layout_alignBottom="@+id/speechBubble"
            android:gravity="center"
            android:text="@string/challenge_notification_duration"
            android:id="@+id/challengeHeader"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:textColor="#a29e93"
            android:visibility="visible" />


        <!-- result -->
        <ImageView
            android:id="@+id/resultBox"
            android:layout_width="300dp"
            android:layout_height="74dp"
            android:src="@drawable/frame_gray"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/speechBubble" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/resultPic"
            android:background="@drawable/circle_outline"
            android:src="@drawable/default_profile_pic"
            android:layout_alignTop="@+id/resultBox"
            android:layout_alignLeft="@+id/resultBox"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="22dp"
            android:contentDescription="@string/player_picture_image_desc"/>
        
        <TextView
            android:id="@+id/resultName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex Foster"
            android:textColor="#696761"
            android:layout_alignTop="@+id/resultBox"
            android:layout_alignBottom="@+id/resultBox"
            android:layout_toRightOf="@+id/resultPic"
            android:layout_marginLeft="14dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/resultWon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="won"
            android:textColor="#a29e93"
            android:layout_alignTop="@+id/resultBox"
            android:layout_alignBottom="@+id/resultBox"
            android:layout_toRightOf="@+id/resultName"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/resultCoin"
            android:src="@drawable/icon_coin"
            android:layout_alignTop="@+id/resultBox"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/resultWon"
            android:contentDescription="@string/player_picture_image_desc"/>

        <TextView
            android:id="@+id/resultRewardNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4000"
            android:textColor="#efba1c"
            android:layout_alignTop="@+id/resultBox"
            android:layout_alignBottom="@+id/resultBox"
            android:layout_toRightOf="@+id/resultCoin"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical" />







        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/opponentDistance"
            android:layout_below="@+id/resultBox"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_marginRight="72dp"
            android:layout_marginTop="40dp"
            android:textColor="#1f1f1f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/playerDistance"
            android:layout_below="@+id/resultBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20sp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="40dp"
            android:textColor="#1f1f1f" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_average_pace_title"
            android:id="@+id/averagePaceTitle"
            android:layout_below="@+id/playerDistance"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="50dp"
            android:textSize="12sp"
            android:textColor="#b5b5b5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/playerAveragePace"
            android:layout_below="@+id/averagePaceTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:textColor="#1f1f1f"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/opponentAveragePace"
            android:layout_below="@+id/averagePaceTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="72dp"
            android:layout_marginTop="10dp"
            android:textColor="#1f1f1f"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_top_speed_title"
            android:id="@+id/topSpeedTitle"
            android:layout_below="@+id/playerAveragePace"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:textColor="#b5b5b5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/playerTopSpeed"
            android:layout_below="@+id/topSpeedTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:textColor="#1f1f1f"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/opponentTopSpeed"
            android:layout_below="@+id/topSpeedTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="72dp"
            android:layout_marginTop="10dp"
            android:textColor="#1f1f1f"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_total_up_title"
            android:id="@+id/totalUpTitle"
            android:layout_below="@+id/playerTopSpeed"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:textColor="#b5b5b5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/playerTotalUp"
            android:layout_below="@+id/totalUpTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:textColor="#1f1f1f"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/opponentTotalUp"
            android:layout_below="@+id/totalUpTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="72dp"
            android:layout_marginTop="10dp"
            android:textColor="#1f1f1f"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_total_down_title"
            android:id="@+id/totalDownTitle"
            android:layout_below="@+id/playerTotalUp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:textColor="#b5b5b5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/playerTotalDown"
            android:layout_below="@+id/totalDownTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="10dp"
            android:textColor="#1f1f1f"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/challenge_default_value"
            android:id="@+id/opponentTotalDown"
            android:layout_below="@+id/totalDownTitle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="72dp"
            android:layout_marginTop="10dp"
            android:textColor="#1f1f1f"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/averagePaceIcon"
            android:layout_alignTop="@+id/averagePaceTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/challenge_average_pace"
            android:layout_marginLeft="16dp"
            android:contentDescription="@string/stat_image_desc"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topSpeedIcon"
            android:layout_alignTop="@+id/topSpeedTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/challenge_top_speed"
            android:contentDescription="@string/stat_image_desc"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalUpIcon"
            android:layout_alignTop="@+id/totalUpTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/challenge_total_up"
            android:layout_marginLeft="16dp"
            android:contentDescription="@string/stat_image_desc"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalDownIcon"
            android:layout_alignTop="@+id/totalDownTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/challenge_total_down"
            android:contentDescription="@string/stat_image_desc"/>


        <Button
            android:layout_width="208dp"
            android:layout_height="32dp"
            android:id="@+id/raceNowBtn"
            android:text="RETURN TO HOME SCREEN"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/playerTotalDown"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="24dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:background="@drawable/red_accept_button"
            android:onClick="onRaceNow"/>


    </RelativeLayout>
</ScrollView>
