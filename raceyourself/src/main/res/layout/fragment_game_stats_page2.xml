<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal|top"
    android:background="#ffffff">

    <!-- distance complete -->
    <TextView
        android:id="@+id/distanceCompleteTextView"
        android:text="@string/distance_complete_initial_value"
        android:textSize="46sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/distanceCompleteLabel"
        android:text="@string/distance_complete_label"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/distanceCompleteTextView"
        android:layout_centerHorizontal="true" />

    <!-- current pace -->
    <TextView
        android:id="@+id/currentPaceTextView"
        android:text="@string/current_pace_initial_value"
        android:textSize="46sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/distanceCompleteTextView"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/currentPaceLabel"
        android:text="@string/current_pace_label"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/currentPaceTextView"
        android:layout_centerHorizontal="true" />

    <!-- average pace -->
    <TextView
        android:id="@+id/averagePaceTextView"
        android:text="@string/average_pace_initial_value"
        android:textSize="70sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/currentPaceTextView"
        android:layout_marginTop="20dp"
        android:paddingBottom="5dp" />

    <TextView
        android:id="@+id/averagePaceLabel"
        android:text="@string/average_pace_label"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/averagePaceTextView"
        android:layout_centerHorizontal="true" />




</RelativeLayout>