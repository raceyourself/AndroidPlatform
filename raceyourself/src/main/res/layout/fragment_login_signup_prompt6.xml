<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raceyourself.raceyourself.login.LoginSignupPromptActivity$PlaceholderFragment">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/signupcard1"
        android:adjustViewBounds="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/signup_fragment_6_title"
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/signup_fragment_6_desc"
        android:id="@+id/textView6"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:layout_marginTop="44dp" />


</FrameLayout>
