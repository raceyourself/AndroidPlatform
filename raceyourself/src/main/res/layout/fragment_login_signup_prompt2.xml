<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.raceyourself.raceyourself.login.LoginSignupPrompt$PlaceholderFragment">


    <ImageView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/signupcard1"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Race Friends."
        android:textStyle="bold"
        android:id="@+id/textView5"
        android:gravity="center_horizontal"
        android:textSize="14dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Send and receive challenges from your friends. Compare stats and enter group challenges together."
        android:id="@+id/textView6"
        android:gravity="center_horizontal"
        android:textSize="12dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />


</RelativeLayout>
