<RelativeLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal|top"
    android:background="#ffffff">

    <!-- background images -->
    <ImageView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/aheadBehindBackground"
        android:src="@drawable/border_red_20px"
        android:layout_alignBottom="@+id/aheadBehindTextView" />

    <!-- content starts here -->
    <TextView
        android:id="@+id/timeRemainingTextView"
        android:text="00:06:38"
        android:textSize="46sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/timeRemainingLabel"
        android:text="TIME REMAINING"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeRemainingTextView"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/aheadBehindTextView"
        android:text="20"
        android:textSize="130dp"
        android:textColor="#ffff0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeRemainingTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/aheadBehindLabel"
        android:text="BEHIND (M)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/aheadBehindTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textColor="#ffff0200" />

</RelativeLayout>