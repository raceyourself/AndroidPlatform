<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="TextHeading1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextHeading2" parent="@android:style/TextAppearance.Medium">
        <!--<item name="android:textSize">15sp</item>-->
    </style>

    <style name="TextHeading2Highlight" parent="TextHeading2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fbbf14</item>
    </style>

    <style name="TextPrimaryAction" parent="TextHeading2">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#4cb648</item>
    </style>

    <style name="TextPoints" parent="TextHeading2">
        <item name="android:textColor">#fbbf14</item>
    </style>

    <style name="TextBody" parent="@android:style/TextAppearance.Small">
        <!--<item name="android:textSize">13sp</item>-->
    </style>

    <style name="TextBodyLowFocus" parent="TextBody">
        <item name="android:textColor">#b5b5b6</item>
    </style>


</resources>
